{
  "name": "tosijs-dev",
  "version": "0.1.7",
  "description": "Browser control for AI agents - query DOM, click, type, run JS, watch mutations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./component": {
      "import": "./dist/component.js",
      "types": "./dist/component.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "bin": {
    "tosijs-dev": "./bin/tosijs-dev.mjs",
    "haltija": "./bin/tosijs-dev.mjs"
  },
  "files": [
    "dist",
    "bin",
    "docs",
    "haltija-icon.svg"
  ],
  "scripts": {
    "build:assets": "bun run scripts/embed-assets.ts",
    "build": "bun run scripts/build.ts",
    "build:bookmarklet": "bun run bin/build-bookmarklet.ts",
    "dev": "bun run bin/server.ts",
    "test": "bun test src/server.test.ts",
    "test:https": "bun test src/https.test.ts",
    "test:both": "bun test src/both-mode.test.ts",
    "test:e2e": "bunx playwright test src/playwright.test.ts",
    "test:all": "bun test src/server.test.ts src/https.test.ts src/both-mode.test.ts && bunx playwright test src/playwright.test.ts"
  },
  "keywords": [
    "devtools",
    "debugging",
    "websocket",
    "ai-agent",
    "browser"
  ],
  "author": "Tonio Loewald",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "typescript": "^5.0.0"
  }
}
