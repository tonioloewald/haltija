{
  "name": "haltija",
  "version": "1.1.3",
  "description": "Browser control for AI agents - query DOM, click, type, run JS, watch mutations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./component": {
      "import": "./dist/component.js",
      "types": "./dist/component.d.ts"
    },
    "./server": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./client": {
      "import": "./dist/client.js",
      "types": "./dist/client.d.ts"
    }
  },
  "bin": {
    "tosijs-dev": "./bin/tosijs-dev.mjs",
    "haltija": "./bin/tosijs-dev.mjs",
    "hj": "./bin/hj.mjs",
    "haltija-mcp-setup": "./bin/mcp-setup.mjs"
  },
  "files": [
    "dist",
    "bin",
    "docs",
    "haltija-icon.svg",
    "apps/desktop/*.js",
    "apps/desktop/*.html",
    "apps/desktop/*.css",
    "apps/desktop/package.json",
    "apps/desktop/resources/component.js",
    "apps/desktop/resources/icon.svg"
  ],
  "scripts": {
    "build:assets": "bun run scripts/embed-assets.ts",
    "build": "bun run scripts/build.ts",
    "build:bookmarklet": "bun run bin/build-bookmarklet.ts",
    "dev": "bun run bin/server.ts",
    "electron": "bun run build && cd apps/desktop && npx electron .",
    "start": "bun run electron",
    "test": "bun test",
    "test:server": "bun test src/server.test.ts",
    "test:https": "bun test src/https.test.ts",
    "test:both": "bun test src/both-mode.test.ts",
    "test:e2e": "bunx playwright test",
    "test:all": "bun test && bunx playwright test"
  },
  "keywords": [
    "devtools",
    "debugging",
    "websocket",
    "ai-agent",
    "browser"
  ],
  "author": "Tonio Loewald",
  "license": "Apache-2.0",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "tosijs-schema": "^1.1.3"
  }
}
